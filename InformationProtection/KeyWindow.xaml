<Window x:Class="InformationProtection.KeyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InformationProtection"
        mc:Ignorable="d"
        Title="KeyWindow" Height="246" Width="361" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="Введите ключ:" FontSize="16" Margin="10"/>
            <PasswordBox x:Name="txtBoxKey" Height="40" Width="300" FontSize="16"/>
            <TextBlock x:Name="txtBlock" Text="{Binding Text}" FontSize="16" Margin="10"/>
        </StackPanel>
        <Button Content="OK" Height="50" Width="90" Grid.Row="1" Click="Button_Click"/>
        
    </Grid>
</Window>
